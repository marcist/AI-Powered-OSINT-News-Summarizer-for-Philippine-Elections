# === ğŸ“ Summarizer with handling ===
def extract_and_summarize(url):
    """Extracts article text and generates a summary with error handling."""
    try:
        if not url.startswith(('http://', 'https://')):
            return "âŒ Invalid URL"

        article = Article(url)

        try:
            article.download()
            article.parse()
        except Exception as e:
            return f"âš ï¸ Unable to download or parse article: {str(e)}"

        text = article.text.replace('\n', ' ').strip()[:2000]
        if not text:
            return "âš ï¸ No extractable text"

        word_count = len(text.split())

        # Safe length bounds
        max_len = max(30, min(130, word_count // 2))
        min_len = min(30, max_len - 5) if max_len > 35 else 10

        summary = summarizer(
            text,
            max_length=max_len,
            min_length=min_len,
            do_sample=False
        )[0]['summary_text']

        return summary

    except Exception as e:
        return f"âš ï¸ Processing failed: {str(e)}"


